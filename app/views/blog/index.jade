extends layout

block content
    each post in posts
      div.post
        h3.post-title
          a(href="/posts/view/" + post.id,target="_blank")
              =post.title
        div.post-abstract
            =post.content
        div.post-meta
            span.post-created
                时间:&nbsp
                =moment(post.created).format('YYYY-MM-DD')
            span.post-anthor
                作者:&nbsp
                =post.anthor.name
            span.post-category
                分类:&nbsp
                =post.category.name
            span.post-comment
                评论:&nbsp
                =post.comments.length || 0
            span.post-favorite
                被赞:&nbsp
                =post.meta.favorite || 0
